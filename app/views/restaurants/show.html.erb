<h2><%= @restaurant.name %></h2>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Reviews:</strong>
 <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.content %> (<%= review.rating %>)
      </li>
    <% end %>
  </ul>
</p>



<p>
  <%= link_to "back..", restaurants_path %>
  <%= link_to "create..", new_restaurant_path %>
  <%= link_to "create a review", new_restaurant_review_path(@restaurant) %>
</p>
